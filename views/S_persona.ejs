          <%= form %>
        </h1>
        <p>Bienvenido a la
          <%= form %>
        </p>
        <form action="/S_persona/<%=campos.ndocumento%>" method="POST" id="formPersona">
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fnombre">Nombre</label>
              <input type="text" name="fnombre" id="fnombre" placeholder="Nombres" value="<%= campos.nombre%>" class="form-control"
                disabled>
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="fapellido">Apellido</label>
              <input type="text" name="fapellido" id="fapellido" placeholder="Apellidos" value="<%= campos.apellido%>"
                class="form-control" disabled>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fedad">Edad</label>
              <input type="number" name="fedad" id="fedad" min="0" value="<%= campos.edad%>" class="form-control">
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="ffechanacimiento">Fecha de nacimiento</label>
              <input type="date" name="ffechanacimiento" id="ffechanacimiento" value="<%= campos.fechanacimiento%>"
                class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fcelular">Celular</label>
              <input type="tel" name="fcelular" id="fcelular" value="<%= campos.celular%>" class="form-control"
                placeholder="Ej: 555-555-5555">
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="femail">Correo electrónico</label>
              <input type="email" name="fcorreo" class="form-control" value="<%= campos.correo%>" id="femail"
                placeholder="Email" disabled>
            </div>
          </div>
