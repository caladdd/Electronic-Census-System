              <label for="gmasculino" class="form-check-label">Masculino</label>
            </div>
            <div class="form-check form-check-inline">
              <input type="radio" name="fgenero" id="gfemenino" value="femenino" class="form-check-input">
              <label for="gfemenino" class="form-check-label">Femenino</label>
            </div>
            <div class="form-check form-check-inline">
              <input type="radio" name="fgenero" id="gotro" value="otro" class="form-check-input">
              <label for="gotro" class="form-check-label">Otro</label>
            </div>
          </div>
